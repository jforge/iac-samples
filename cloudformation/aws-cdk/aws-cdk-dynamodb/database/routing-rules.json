[
{
    "host": "www.things.codes",
    "uri": "/api",
    "redirects" : [
        {
            "selector": "default",
            "setPath": "/index.html",
            "setOrigin": "https://api.things.codes",
            "setHeaders": [
              { "referrer-policy": "same-origin" },
              { "strict-transport-security": "max-age= 63072000; includeSubdomains; preload" }
            ]
        },
        {
            "selector": "authToken.invalid",
            "setPath": "/",
            "setQuerystring": "?target=api",
            "setOrigin": "https://signin.things.codes",
            "setHeaders": [
              { "referrer-policy": "same-origin" },
              { "strict-transport-security": "max-age= 63072000; includeSubdomains; preload" }
            ]
        }
    ]
},
